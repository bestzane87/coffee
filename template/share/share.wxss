/* template/share/share.wxss */
.share_ac_tem {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999999999999;
  background: rgba(0,0,0,.7);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_img_wrapper {
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.share_code {
  height: 875rpx;
  width: 640rpx;
}

.desc_wrapper {
  padding: 24rpx;
  text-align: center;
}

.share_icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.share_operation {
  width: 100%;
  background: #fff;
}

.share_cancle {
  height: 94rpx;
  text-align: center;
  line-height: 94rpx;
  border-top: 1rpx solid rgba(238,238,238,1);
  margin-top: 10rpx;
}

.col_flexible {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_operation_wrapper {
  justify-content: space-around;
}

