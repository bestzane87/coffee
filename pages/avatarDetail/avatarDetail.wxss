@import '/template/template.wxss';

.avatar_container {
  border: none;
}
.avatar_wrapper {
  width:702rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 3rpx 11rpx 5rpx rgba(0, 0, 0, 0.14);
  border-radius:9rpx;
  margin: 20rpx auto;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.msg_item {
  color: red;
  font-size: 32rpx;
  height: 100rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(153, 153, 153, .3);
}
.msg_item_top {
  font-size: 34rpx;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(153, 153, 153, .3);
}
.vertical_line {
  width:14rpx;
  margin-right: 26rpx;
  height:40rpx;
  background:rgba(158,139,255,1);
  border-radius:4rpx;
}
.item_title {
  margin-left: 40rpx;
}
.msg_item:last-child {
  border: none;
}
.operation_wrapper {
  width: 100%;
  height: 100rpx;
  justify-content: flex-end;
}
.operation_wrapper view {
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 24rpx;
}
.operation_wrapper view:nth-child(1) {
  width: 160rpx;
  border: 1rpx solid #A17FF4;
  color:rgba(161,127,244,1);
}
.operation_wrapper view:nth-child(2) {
  width: 130rpx;
  color:rgba(255,255,255,1);
  background:linear-gradient(146deg,rgba(127,127,248,1),rgba(174,127,242,1));
}
.border_none {
  border: none;
}