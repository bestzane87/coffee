/* pages/chooseLogin/chooseLogin.wxss */
.logo_icon {
  width: 125rpx;
  height: 125rpx;
  margin-bottom: 24rpx;
}
.logo_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 180rpx 0 260rpx;
}
.wechat_w {
  width: 60rpx;
  height: 60rpx;
  margin-right: 14rpx;
}
.auth_btn {
  display: flex;
  color: #fff;
  align-items: center;
  justify-content: center;
  width: 666rpx;
  height: 96rpx;
  background: linear-gradient(146deg,rgba(116,110,243,1),rgba(168,107,255,1));
  box-shadow: 0rpx 18rpx 13rpx 0rpx rgba(168,107,255,0.3);
  border-radius: 48rpx;
}
.auth_text {
  text-align: center;
  margin-bottom: 24rpx;
  color: #999;
}
.modal_toast {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,.4);
}
.modal_content {
  position: absolute;
  top: 340rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 640rpx;
  height: 333rpx;
  background: rgba(255,255,255,1);
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 65rpx 24rpx 0;

}
.bottom_text {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  text-align: center;
  width: 100vw;
}
.color_b {
  color: #9369FF;
  margin: 0 7rpx;
}