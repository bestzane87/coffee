.visitor-wrapper {
  overflow: hidden;
}
.visitor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}
.white_line {
  background: #fff;
  height: 1rpx;
}
.visitor-title {
  padding: 22rpx 24rpx 0 24rpx;
  font-size: 28rpx;
  color:rgba(51,51,51,1);
}
.visitor-item {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  width: 702rpx;
  height: 200rpx;
  background: rgba(255,255,255,1);
  box-shadow: 0 0 10px rgba(0,0,0,0.14);
  border-radius: 9rpx;
  margin: 20rpx auto 0 auto;
}
.focus-btn {
  width: 150rpx;
  height: 60rpx;
  background: linear-gradient(146deg,rgba(127,127,248,1),rgba(174,127,242,1));
  border-radius: 30rpx;
  font-size:14px;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.visitor-detail {
  flex: 1;
  margin-left: 20rpx;
}
.flex-start {
  margin: 20rpx 0;
  justify-content: flex-start;
}
.visitor-name {
  font-size: 17px;
}
.flex-start view {
  padding: 5rpx;
  background: rgba(255,249,251,1);
  border: 1rpx solid rgba(255,161,163,1);
  border-radius: 8rpx;
  color: rgba(255,161,163,1);
  font-weight: 400;
  font-size: 12px;
  margin-right: 10rpx;
}
.viewed-num {
  color:rgba(153,153,153,1);
  font-size: 14px;
  justify-content: flex-start;
}
.location-icon {
  width: 30rpx;
  height: 35rpx;
  margin-right: 5rpx;
}
.location-wrapper {
  align-content: flex-end;
  color:rgba(51,51,51,1);
}
.active-time {
  margin-right: 38rpx;
  color: #999999;
}