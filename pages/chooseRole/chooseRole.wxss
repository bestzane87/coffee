@import '../../template/template.wxss';

.role_container {
  padding-bottom: 150rpx;
}
.role_list {
  flex-wrap: wrap;
  justify-content: space-around;
}
.category_name {
  margin: 40rpx 0 48rpx;
  padding-left: 24rpx;
}
.role_name {
  width:300rpx;
  height:60rpx;
  border:1rpx solid rgba(163,125,246,1);
  border-radius:30rpx;
  justify-content: center;
  color: #A37DF6;
  margin-bottom: 30rpx;
}
.choosed_role {
  background:linear-gradient(72deg,rgba(127,127,248,1),rgba(174,127,242,1));
  color: #fff;
}
.disabled_role {
  background: #fff;
  border:1px solid rgba(199,199,199,1);
  color: #C7C7C7;
}